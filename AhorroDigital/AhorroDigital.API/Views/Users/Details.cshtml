<div class="container__tableUsers saving" data-aos="fade-left" data-aos-duration="2000">
        <div class="card content__t ">
            <div class="card-header color_text">
                <i class="fa-solid fa-money-bill-1"></i>  <strong>Ahorros</strong>
            </div>
            <div class="card-body">
            <div class="mb-2">

                <a asp-action="AddSaving" asp-route-id="@Model.Id" class="btn btn-outline-primary btn_new btns"><i class="fa-solid fa-circle-plus"></i> Adiccionar Ahorro</a>

                
            </div>
                <div id="view-all">

                    <table class="table table-striped table-bordered" id="SavingTable" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().SavingTypes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().DateIni)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().DateEnd)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().MinValue)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().Marks)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().ContributesCount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().TotalOut)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().Total)
                                </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().ValueWing)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().ValueDRetiro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().TotalR)
                            </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Savings)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.SavingTypes.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.DateIni)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.DateEnd)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.MinValue)
                                    </td>
                                    <td>
                                        @{
                                            if (item.Marks != null)
                                            {
                                                string[] noteWords = item.Marks.Split(' ');
                                                if (noteWords.Count() > 7)
                                                {
                                                <div class=" card__info_c">
                                                    <div class="   content__info-card">
                                                        <div class="card-body bod_content">
                                                            
                                                            <article class="mt-2 art_info">
                                                                <div class="">
                                                                    <p class="questions__title_b">

                                                                        <span class="">
                                                                            <a class="questions__img" style="color:#16A085 !important"> Leer Observación --> </a>
                                                                        </span>
                                                                    </p>

                                                                    <div class="questions__show">
                                                                            @Html.DisplayFor(modelItem => item.Marks)

                                                                    </div>

                                                                </div>
                                                            </article>
                                                        </div>
                                                    </div>
                                                </div>




                                                    
                                                }
                                                else
                                                {
                                                    @Html.DisplayFor(modelItem => item.Marks)
                                                    ;
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.ContributesCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.TotalOut)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.Total)
                                    </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.ValueWing)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.ValueDRetiro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.TotalR)
                                </td>
                                    <td>
                                        <a asp-action="EditSaving" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a asp-action="DetailsSaving" asp-route-id="@item.Id" class="btn btn-info"><i class="fa-solid fa-money-bill-transfer"></i></a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa-solid fa-trash"></i></button>

                                    }
                                        <a asp-action="DetailsRetreat" asp-route-id="@item.Id" class="btn btn-info" style="background: #424949 !important"><i class="fa-solid fa-hand-holding-dollar"></i></a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
