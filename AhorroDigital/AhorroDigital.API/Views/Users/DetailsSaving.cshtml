                                        {
                                            <a asp-action="EditContribute" asp-route-id="@item.Id" class="btn btn-dark "><i class="fa-solid fa-pen-to-square"></i></a>
                                        }
                                        else

                                        {
                                            @if (User.IsInRole("Admin"))
                                            {
