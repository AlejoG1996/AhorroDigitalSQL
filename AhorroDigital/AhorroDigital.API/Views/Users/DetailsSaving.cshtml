                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.UserAdmin.FullName)
                                </td>
                                <td>
                                    <img src="@item.ImageFullPath" style="width:60px; height:60px; border-radius:30px" />
                                </td>
                                <td>
                                    @if (item.ValueRetreat > 0)
                                    {
                                        @if (item.State.Equals("Pendiente"))
                                        {
                                            <a asp-action="EditContribute" asp-route-id="@item.Id" class="btn btn-dark not-active"><i class="fa-solid fa-pen-to-square"></i></a>

                                        }
                                        @if (User.IsInRole("Admin"))
                                        {        
                                             <a asp-action="EditContribute" asp-route-id="@item.Id" class="btn btn-dark not-active"><i class="fa-solid fa-pen-to-square"></i></a>
