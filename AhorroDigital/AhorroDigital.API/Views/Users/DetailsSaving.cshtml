@{
    //valida si existe retiro
    int countpagos = 0;
    foreach (var item in Model.Retreats)
    {
        if (item.State.Equals("Aprobado"))
        {
            countpagos = countpagos + 1;
        }
        else if (item.State.Equals("Pendiente"))
        {
            countpagos = countpagos + 1;
        }
    }

}

<div class="col-md-12 mb-4" data-aos="fade-up" data-aos-duration="2000">

    @if(countpagos>0){
        <a asp-action="AddContribute" asp-route-id="@Model.Id" class="btn btn-primary not-active">Adiccionar Consignación</a>
        <a asp-action="EditSaving" asp-route-id="@Model.Id" class="btn btn-warning not-active">Editar Ahorro</a>
    }else{
        <a asp-action="AddContribute" asp-route-id="@Model.Id" class="btn btn-primary">Adiccionar Consignación</a>
        <a asp-action="EditSaving" asp-route-id="@Model.Id" class="btn btn-warning">Editar Ahorro</a>
    }
  
    <a asp-action="Details" asp-route-id="@Model.User.Id" class="btn btn-success">Regresar</a>


</div>


