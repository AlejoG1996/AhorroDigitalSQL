@{
    //valida si existe retiro 
    int countpagos = 0;
    foreach (var item in Model.Retreats)
    {
        if (item.State.Equals("Aprobado"))
        {
            countpagos = countpagos + 1;
        }
        else if (item.State.Equals("Pendiente"))
        {
            countpagos = countpagos + 1;
        }
    }

}

<div class=" saving" data-aos="fade-left" data-aos-duration="2000">
    <div class="card content__t ">
        <div class="card-header color_text">
            <i class="fa-solid fa-credit-card"></i>  <strong>Retiros</strong>
        </div>

        <div class="card-body">
            <div class="mb-2">
                @if (countpagos > 0)
                {
                    <a asp-action="AddRetreat" asp-route-id="@Model.Id" class="btn btn-outline-primary btn_new btns  not-active">Adiccionar Retiro</a>

                }
                else

                {
                    <a asp-action="AddRetreat" asp-route-id="@Model.Id" class="btn btn-outline-primary btn_new  btns ">Adiccionar Retiro</a>

                }
            </div>
            <div id="view-all">

                <table class="table table-striped table-bordered" id="SavingTable" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Retreats.FirstOrDefault().DateS)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Retreats.FirstOrDefault().DateM)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Retreats.FirstOrDefault().State)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Retreats.FirstOrDefault().Value)
                            </th>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.Retreats.FirstOrDefault().Marks)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Retreats.FirstOrDefault().MarksAdmin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Retreats.FirstOrDefault().UserAdmin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Retreats.FirstOrDefault().ImageFullPath)
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Retreats)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.DateS)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.DateM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.State)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.Value)
                                </td>
                               
                                <td>
                                    @{
                                        if (item.Marks != null)
                                        {
                                            string[] noteWords = item.Marks.Split(' ');
                                            if (noteWords.Count() > 7)
                                            {
                                                <div class=" card__info_c">
                                                    <div class="   content__info-card">
                                                        <div class="card-body bod_content">

                                                            <article class="mt-2 art_info">
                                                                <div class="">
                                                                    <p class="questions__title_b">

                                                                        <span class="">
                                                                            <a class="questions__img" style="color:#16A085 !important"> Leer Observación --> </a>
                                                                        </span>
                                                                    </p>

                                                                    <div class="questions__show">
                                                                        @Html.DisplayFor(modelItem => item.Marks)

                                                                    </div>

                                                                </div>
                                                            </article>
                                                        </div>
                                                    </div>
                                                </div>





                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.Marks)
                                                ;
                                            }
                                        }
                                    }
                                </td>

                                <td>
                                    @{
                                        if (item.MarksAdmin != null)
                                        {
                                            string[] noteWords = item.MarksAdmin.Split(' ');
                                            if (noteWords.Count() > 7)
                                            {
                                                <div class=" card__info_c">
                                                    <div class="   content__info-card">
                                                        <div class="card-body bod_content">

                                                            <article class="mt-2 art_info">
                                                                <div class="">
                                                                    <p class="questions__title_b">

                                                                        <span class="">
                                                                            <a class="questions__img" style="color:#16A085 !important"> Leer Observación Admin--> </a>
                                                                        </span>
                                                                    </p>

                                                                    <div class="questions__show">
                                                                        @Html.DisplayFor(modelItem => item.MarksAdmin)

                                                                    </div>

                                                                </div>
                                                            </article>
                                                        </div>
                                                    </div>
                                                </div>





                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.MarksAdmin)
                                                ;
                                            }
                                        }
                                    }
                                </td>
                               
                                <td>
                                    @Html.DisplayFor(modelItem=>item.UserAdmin)
                                </td>
                               
                                
                                <td>
                                    <img src="@item.ImageFullPath" style="width:60px; height:60px; border-radius:30px" />
                                </td>
                                <td>

                                    


                                     @if (User.IsInRole("Admin"))
                    {
                                        <a asp-action="EditRetreat" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa-solid fa-trash"></i></button>

                                    }
                                    else
                                    {
                                        if (item.State.Equals("Pendiente"))
                                        {
                                            <a asp-action="EditRetreat" asp-route-id="@item.Id" class="btn btn-dark "><i class="fa-solid fa-pen-to-square"></i></a>
                                        }
                                        else{

                                            <a asp-action="EditRetreat" asp-route-id="@item.Id" class="btn btn-dark not-active"><i class="fa-solid fa-pen-to-square"></i></a>

                                        }

                        }

                                        
                                    

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

