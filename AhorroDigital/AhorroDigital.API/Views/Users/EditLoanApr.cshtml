@model AhorroDigital.API.Models.LoanViewModel
@{
    ViewData["Title"] = "EditLoan";
}

<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />
<link rel="stylesheet" href="~/css/FormProgress.css" />
<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
<link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<div class="row" data-aos="fade-up" data-aos-duration="2000">
    <div class="col-md-12">
        <h3>Editar Préstamo</h3>
        <hr />

        <form asp-action="EditLoanApr" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LoanTypeId" />
            <input type="hidden" asp-for="Interest" />
            <input type="hidden" asp-for="Dues" />
            <input type="hidden" asp-for="Value" />
            <input type="hidden" asp-for="State" />
            <input type="hidden" asp-for="ImageFullPath" />
            <input type="hidden" asp-for="ImageId" />
            <input type="hidden" asp-for="UserId" />
            <div class="col-md-12">
                <flash dismissable="true" />
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                         @if (User.IsInRole("Admin"))
                        {
                            <div class="col-md-4" style="height:500px !important">
                                <div class="col-md-12" style="height:100% !important">
                                    <img id="imagenPrevisualizacion" src="@Model.ImageFullPath" style="object-fit: cover; width:100%; height:100%;" />
                                    <input asp-for="ImageFile" class="form-control" type="file" id="real-file" hidden="hidden" accept="image/*" display="none" />
                                </div>
                                <span asp-validation-for="ImageFile" class="text-danger text__error"></span>
                                <a type="button" id="custom-button_2"> Subir Comprobante</a>

                            </div>

                        }
                        <div class="col-md-8" style="margin-top:55px !important;">
                            <div class="row">
                                <div class="col-md-6">

                                    <label asp-for="LoanTypeId" class="control-label content__label-tcb"></label>
                                    <div class="input-field-em">
                                        <i class="fa-solid fa-piggy-bank"></i>
                                        <select asp-for="LoanTypeId" asp-items="Model.LoanTypes" class="" id="LoanType" disabled></select>
                                    </div>
                                    <span asp-validation-for="LoanTypeId" class="text-danger"></span>

                                    <label asp-for="Dues" class="control-label content__label-tcb"></label>
                                    <div class="input-field">
                                        <i class="fa-solid fa-hashtag"></i>
                                        <input asp-for="Dues" class="" id="Dues" disabled />
                                    </div>
                                    <span asp-validation-for="Dues" class="text-danger text__error"></span>

                                    <label asp-for="DateS" class="control-label content__label-tcb"></label>
                                    <div class="input-field">
                                        <i class="fa-solid fa-calendar-days"></i>
                                        <input readonly class="" style="margin:auto !important; margin-left:0 !important;" asp-for="DateS" class="" />
                                    </div>
                                    <span asp-validation-for="DateS" class="text-danger text__error"></span>
                                    
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Interest" class="control-label content__label-tcb"></label>
                                    <div class="input-field">
                                        <i class="fa-solid fa-percent"></i>
                                        <input type="text" asp-for="Interest" class="" id="Interes" disabled />
                                    </div>
                                    <span asp-validation-for="Interest" class="text-danger text__error"></span>

                                    <label asp-for="Value" class="control-label content__label-tcb"></label>
                                    <div class="input-field">
                                        <i class="fa-solid fa-dollar-sign"></i>
                                        <input asp-for="Value" class="" id="" disabled />
                                    </div>
                                    <span asp-validation-for="Value" class="text-danger text__error"></span>

                                    

                                    <label asp-for="State" class="control-label content__label-tcb"></label>
                                    <div class="input-field-em">
                                        <i class="fa-solid fa-filter-circle-dollar"></i>
                                        <select asp-for="State" class="marks" placeholder="Comentarios" disabled>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <option value="Pendiente">Pendiente</option>
                                                <option value="Denegado">Denegado</option>
                                                <option value="Aprobado">Aprobado</option>
                                            }
                                            else
                                            {
                                                <option value="Pendiente">Pendiente</option>


                                            }
                                        </select>

                                    </div>
                                    <span asp-validation-for="State" class="text-danger text__error"></span>
                                </div>
                             
                              
                            
                            </div>
                            @if (User.IsInRole("Admin"))

                            {
                                <label asp-for="Marks" class="control-label content__label-tcb"></label>
                                <div class="input-field-em">
                                    <i class="fa-solid fa-quote-right"></i>
                                    <textarea asp-for="Marks" class="marks" placeholder="Comentarios" readonly></textarea>

                                </div>
                                <span asp-validation-for="Marks" class="text-danger text__error"></span>

                                <label asp-for="MarksAdmin" class="control-label content__label-tcb"></label>
                                <div class="input-field-em">
                                    <i class="fa-solid fa-quote-right"></i>
                                    <textarea asp-for="MarksAdmin" class="marks" placeholder="Comentarios"></textarea>

                                </div>
                                <span asp-validation-for="MarksAdmin" class="text-danger text__error"></span>
                            }
                            else
                            {
                                <label asp-for="Marks" class="control-label content__label-tcb"></label>
                                <div class="input-field-em">
                                    <i class="fa-solid fa-quote-right"></i>
                                    <textarea asp-for="Marks" class="marks" placeholder="Comentarios"></textarea>

                                </div>
                                <span asp-validation-for="Marks" class="text-danger text__error"></span>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group mt-4" style="margin-top:65px !important;">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="DetailsLoan" asp-route-id="@Model.UserId" class="btn btn-success">Regresar</a>

            </div>
          

           
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jasny/jasny-bootstrap.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-ui/jquery-ui.min.js"></script>

<script src="~/js/FormProgress.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init();
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        let home = document.getElementById("home");
        let td = document.getElementById("td");
        let tc = document.getElementById("tc");
        let ta = document.getElementById("ta");
        let tp = document.getElementById("tp");
        let user = document.getElementById("user");
        let dash = document.getElementById("dashboard");
        dash.classList.remove('active');
        user.classList.add('active');

        ta.classList.remove('active');
        home.classList.remove('active');
        td.classList.remove('active');
        tc.classList.remove('active');
        tp.classList.remove('active');
        option.classList.add('op_back');
    </script>
    <script>
        document.getElementById("homes").classList.remove('active');
        document.getElementById("pre").classList.add('active');
        document.getElementById("ahr").classList.remove('active');

    </script>
    <script type="text/javascript">

     

        $(document).ready(function () {

            $("#LoanType").change(function () {
                debugger;
                $("#Interes").val(0);
                $("#Dues").val(0);


                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetInterest")',
                    dataType: 'json',
                    data: { LoanTypeId: $("#LoanType").val() },
                    success: function (states) {

                        $("#Interes").val(states.slice(0, 1));
                        $("#Dues").val(states.slice(1, 2));
                        document.getElementById('text_loan').innerHTML = states.slice(2, 3);
                        document.getElementById('text_description').innerHTML = states.slice(3, 4);

                    },
                    error: function (ex) {
                        if ($("#LoanType").val() == 0) {
                            $("#Interes").val(0);
                            $("#Dues").val(0);
                            document.getElementById('text_loan').innerHTML = "No ha seleccionado un tipo de prestamo";
                            document.getElementById('text_description').innerHTML = "No hay descripcion para el prestamo";
                        }
                        //alert('Failed to retrieve Interes.' + ex);
                    }
                });
                return false;
            })
        });

    </script>

 


    <script type="text/javascript">


        const realFileBtn = document.getElementById("real-file");
        const customBtn = document.getElementById("custom-button_2");
        const customTxt = document.getElementById("custom-text");
        var img = document.getElementById("imagenPrevisualizacion");

        customBtn.addEventListener("click", function () {
            realFileBtn.click();
        });

        realFileBtn.addEventListener("change", function () {
            if (realFileBtn.value) {
                customTxt.innerHTML = realFileBtn.value.match(/[\/\\]([\w\d\s\.\-\(\)]+)$/)[1];
            } else {
                customTxt.innerHTML = "No se ha cargado ninguna imagen";
            }
        })

        const $seleccionArchivos = document.querySelector("#real-file"),
            $imagenPrevisualizacion = document.querySelector("#imagenPrevisualizacion");

        // Escuchar cuando cambie
        $seleccionArchivos.addEventListener("change", () => {
            // Los archivos seleccionados, pueden ser muchos o uno
            const archivos = $seleccionArchivos.files;
            // Si no hay archivos salimos de la función y quitamos la imagen
            if (!archivos || !archivos.length) {
                $imagenPrevisualizacion.src = "";
                return;
            }


            var filePath = realFileBtn.value;
            var allowedExtensions = /(.jpg|.jpeg|.png|.gif)$/i;
            if (!allowedExtensions.exec(filePath)) {



            } else {
                // Ahora tomamos el primer archivo, el cual vamos a previsualizar
                const primerArchivo = archivos[0];
                // Lo convertimos a un objeto de tipo objectURL
                const objectURL = URL.createObjectURL(primerArchivo);
                // Y a la fuente de la imagen le ponemos el objectURL
                $imagenPrevisualizacion.src = objectURL;
            }
        });
    </script>
  
}



