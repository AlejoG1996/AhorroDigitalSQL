@model IEnumerable<AhorroDigital.API.Data.Entities.SavingType>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
<link rel="stylesheet" href="~/css/normalize.css" />
<link rel="stylesheet" href="~/css/EstilosAhorros.css" />


<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
<link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.2/css/dataTables.bootstrap5.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/select/1.6.0/css/select.dataTables.min.css">








<div class="container__infoprocess" data-aos="fade-left" data-aos-duration="2000">
    <flash dismissable="true" />
</div>

<div class="container__tableUsers saving" data-aos="fade-left" data-aos-duration="2000">
    <div class="card content__t ">
        <div class="card-header color_text">
            <i class="fa-solid fa-money-bill-1"></i>  <strong>Tipos de Ahorros</strong>
        </div>
        <div class="card-body">
            <div id="view-all">
                <div class="mb-2">
                    <a asp-action="Create" class="btn btn-outline-primary btn_new btns"><i class="fa-solid fa-circle-plus"></i> Nuevo Tipo de Ahorro</a>
                </div>
                <table class="table table-striped table-bordered" id="SavingTable" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Marks)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MinValue)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumberDays)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PorcentageWin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumberRegister)
                            </th>

                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.Name)
                                </td>
                                <td>
                                    @{
                                        if (item.Marks != null)
                                        {
                                            string[] noteWords = item.Marks.Split(' ');
                                            if (noteWords.Count() > 7)
                                            {
                                                <div class=" card__info_c">
                                                    <div class="   content__info-card">
                                                        <div class="card-body bod_content">

                                                            <article class="mt-2 art_info">
                                                                <div class="">
                                                                    <p class="questions__title_b">

                                                                        <span class="">
                                                                            <a class="questions__img" style="color:#16A085 !important"> Leer Observación --> </a>
                                                                        </span>
                                                                    </p>

                                                                    <div class="questions__show">
                                                                        @Html.DisplayFor(modelItem => item.Marks)

                                                                    </div>

                                                                </div>
                                                            </article>
                                                        </div>
                                                    </div>
                                                </div>





                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.Marks)
                                                ;
                                            }
                                        }
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.MinValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.NumberDays)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.PorcentageWin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.NumberRegister)
                                </td>


                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa-solid fa-trash"></i></button>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="_DeleteDialog" />





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/services.js"></script>

    <script src="~/js/infoexpand.js"></script>
    <script src="~/js/showmodal.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jasny/jasny-bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#SavingTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ],
                //select: {
                //    style: 'single'
                //}

            });


        });
        sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/SavingTypes/Delete/', false);
    </script>
    <script>

        let home = document.getElementById("home");
        let td = document.getElementById("td");
        let tc = document.getElementById("tc");
        let ta = document.getElementById("ta");
        let tp = document.getElementById("tp");
        let user = document.getElementById("user");

        ta.classList.add('active');
        let dash = document.getElementById("dashboard");
        dash.classList.remove('active');
        tp.classList.remove('active');
        home.classList.remove('active');
        td.classList.remove('active');
        tc.classList.remove('active');
        user.classList.remove('active');
        option.classList.add('op_back');


    </script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    <script src="https://code.jquery.com/jquery-3.6.3.js"
            integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
            crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.2/js/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/select/1.6.0/js/dataTables.select.min.js"></script>






}
