@{
    ViewData["Title"] = "Confirm";
    Layout = null;

}

<link rel="stylesheet" href="~/css/EstilosError.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<div class="container_login" data-aos="fade-left" data-aos-duration="2000">
    <div class="forms-container">
        <div class="signin-signup">
            <div asp-action="Login" class="sign-in-form form">

                <img src="~/images/confirmacioncuenta.png" class="image404_r " alt="" />
                <h2 class="title">Wow!</h2>
                <p class="sub_title">Felicidades ya eres parte de Ahorro Digital </p>

            </div>
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>Ahorro Digital</h3>
                <p>
                    El camino hacia la riqueza depende fundamentalmente de dos palabras: trabajo y ahorro – Benjamin Franklin
                </p>
                <a asp-controller="Account" asp-action="Login" class="btn transparent" id="sign-up-btn">
                    Iniciar
                </a>
            </div>
            <img src="~/images/confirmacioncuenta.png" class="image" alt="" />
        </div>


    </div>
</div>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
